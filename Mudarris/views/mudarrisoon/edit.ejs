<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">
        Edit Mudarris
    </h1>
    <div class="col-6 offset-3">
        <form action="/mudarrisoon/<%=mudarris._id%>?_method=PUT" method="POST">

            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="mudarris[name]" value="<%=mudarris.name%>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="subject">Subject</label>
                <input class="form-control" type="text" id="subject" name="mudarris[subject]" value="<%=mudarris.subject%>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="mudarris[location]" value="<%=mudarris.location%>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="mudarris[image]" value="<%=mudarris.image%>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="mudarris[description]"><%=mudarris.description%></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="fee">Tuition Fee</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">Â£</span>
                    <input class="form-control" type="text" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="mudarris[fee]" value="<%=mudarris.fee%>">
                </div>
            </div>
            
            <div class="mb-3">
                <button class="btn btn-info">Update</button>
            </div>
        </form>
        <a href="/mudarrisoon/<%=mudarris._id%>">Back to Mudarris</a>
    </div>
</div>
